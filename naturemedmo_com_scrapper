import re
from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.common.action_chains import ActionChains
from bs4 import BeautifulSoup
from time import sleep
from random import randint

chromedriver_path = "/usr/bin/chromedriver"
service = Service(chromedriver_path)
options = Options()
# options.headless = Tree #makes it not pop up
options.add_argument("--incognito")
options.add_argument("--window-size=800,600")
driver = webdriver.Chrome()

url = "https://www.swadecannabis.com/online-menu/?"

driver.get(url)
sleep(randint(1,2))
soup = BeautifulSoup(driver.page_source, 'html.parser')
ok = driver.find_element_by_xpath('//*[@id="elementor-popup-modal-402"]/div/div[2]/div/div/section/div[2]/div/div/div/div/section/div/div/div[1]/div/div/div/div/div/a/span/span')
ActionChains(driver).move_to_element(ok).pause(1).click(ok).perform()
sleep(randint(1,2))

print('into menu')
ok = driver.find_element_by_xpath('//*[@id="__next"]/div[3]/div[1]/div/div/div[1]/div/div/div[1]')
ActionChains(driver).move_to_element(ok).pause(1).click(ok).perform()
print('clicked menu')
